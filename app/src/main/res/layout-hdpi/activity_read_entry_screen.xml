<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".ReadEntryScreen">

    <TextView
        android:id="@+id/textViewReadDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@xml/rounded_box_purple"
        android:gravity="center"
        android:text="Date"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutEdit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@xml/rounded_box_bluish"
        android:onClick="clickEdit"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/layoutDelete"
        app:layout_constraintTop_toTopOf="@+id/layoutDelete">

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_edit" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDelete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@xml/rounded_box_bluish"
        android:onClick="clickDelete"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textViewReadDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewReadDate">

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_bin" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewReadLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Location: "
        android:textColor="@color/mainText"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/layoutEdit"
        app:layout_constraintStart_toStartOf="@+id/textViewReadDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewReadDate" />

    <TextView
        android:id="@+id/textViewReadEntry"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:background="@xml/border"
        android:text="[entry goes here]"
        android:textColor="@color/mainText"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/layoutDelete"
        app:layout_constraintStart_toStartOf="@+id/textViewReadLocation"
        app:layout_constraintTop_toBottomOf="@+id/layoutEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>