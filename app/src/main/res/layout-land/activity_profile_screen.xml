<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context=".ProfileScreen">

    <LinearLayout
        android:id="@+id/layoutProfile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@xml/rounded_box_purple"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="57dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/ic_profile" />

        <TextView
            android:id="@+id/textViewYourProfile"
            android:layout_width="147dp"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:padding="2dp"
            android:text="@string/stringYourProfile"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:padding="2dp"
            android:text="@string/stringUsername"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/layoutSettings2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@xml/border"
        android:stretchColumns="0"
        app:layout_constraintEnd_toEndOf="@+id/layoutProfile1"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/layoutProfile1"
        app:layout_constraintTop_toBottomOf="@+id/layoutProfile1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@xml/border_bottom"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textViewProfileUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="USERNAME"
                android:textColor="@color/mainText"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="554dp"  />

            <Button
                android:id="@+id/buttonUpdateUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringUpdate"
                app:backgroundTint="#3F51B5"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="417dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@xml/border_bottom"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textViewProfilePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="PASSWORD"
                android:textColor="@color/mainText"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="554dp" />

            <Button
                android:id="@+id/buttonUpdatePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringUpdate"
                app:backgroundTint="#3F51B5"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="417dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textViewProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="EMAIL"
                android:textColor="@color/mainText"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="554dp" />

            <Button
                android:id="@+id/buttonUpdateEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringUpdate"
                app:backgroundTint="#3F51B5" />

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>